<%= link_to("<<back to the list", { :action => 'index' , :subject_id => @subject.id}, :class => 'back-link') %>
<div class="page edit">
<h2>update Page</h2>
	
<%= form_for( :page , :url => {:action => 'update' , :id => @page.id , :subject_id => @subject.id}) do |f| %>
<table summary="page form fields">

<tr>
		<th><%= f.label :subject_id, "Subject Id" %></th>
		<td><%= f.select(:subject_id, @subjects.map { |s| [s.name ,s.id]  }) %></td>

</tr>


	
<tr>
		<th><%= f.label :name, "Name" %></th>
		<td><%= f.text_field(:name) %></td>

</tr>


<tr>
		<th><%= f.label :permalink, "Permalink" %></th>
		<td><%= f.text_field(:permalink) %></td>

</tr>



<tr>
		<th><%= f.label :position, "Position" %></th>
		<td><%= f.select(:position , 1..@page_count) %></td>

</tr>


<tr>
		<th><%= f.label :visible, "Visible" %></th>
		<td><%= f.check_box :visible %></td>

</tr>

</table>
<div class="form-buttons">
		<%= submit_tag("update  page") %>
</div>
<% end %>
</div>




