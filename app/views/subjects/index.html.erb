
<% page_title = "subject" %>
<div calss = "subject index" >

<h2>subjects </h2>
 
<%=  %>
<div><%= pluralize(@subject.size,'subject')%> 	Found
<div><%= link_to( image_tag('plus_sign.png' , :size => '22*22' , :alt => '+') + " Add new subject", { :action => 'new'} , :class => 'action new') %>
</div>
</div>
<table class = "listing" summary="subject list" border="2" align="center" cellpadding="10" height="100" width="900" style="margin-top:80px;">
<tr class="header">
<th>&nbsp;</th>
<th>Subject</th>
<th>Visible</th>
<th>Pages</th>
<th>Actions</th>
</tr>
<% @subject.each  do |subject| %>
<tr>
<td><%= subject.position %></td>
<td><%= subject.name %></td>
<td class="center"><%= status_tag(subject.visible)  %></td>
<td class="center"><%= subject.pages.size %></td>
<td class="actions">
<%= link_to("Show", {:action => 'show' , :id => subject.id}, :class => 'action show')%>
<%= link_to("Edit",{:action => 'edit' , :id => subject.id}, :class => 'action edit') %>
<%= link_to("Delete", {:action => 'delete' , :id => subject.id}, :class => 'action delete') %>
</td>
</tr>
<% end %>
</table>
</div>
