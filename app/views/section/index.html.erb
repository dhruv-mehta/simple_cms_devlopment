<div calss = "section index" >


<%= link_to "Back to pages",{ :controller => 'pages', :action => 'index' , :subject_id => params[:subject_id]} , :class => 'back-link'  %>
<div class="section new">

<h2>sections </h2>
<%= link_to("add new section", { :action => 'new' , :page_id => @page.id,:subject_id => params[:subject_id]} , :class => 'action new') %>
<table class = "listing" summary="section list" border="2" align="center" cellpadding="10" height="100" width="900" style="margin-top:80px;";>
<tr class="header">
<th>&nbsp;</th>
<th>Page Id</th>
<th>Section</th>
<th>Content Type</th>
<th>Visible</th>
<th>Actions</th>
</tr>
<% @section.each  do |section| %>
<tr>
<td><%= section.page_id %></td>
<td><%= section.position %></td>
<td><%= section.name %></td>
<td><%= section.content_type %></td>
<td class="center"><%= section.visible ? 'yes' : 'No' %></td>
<td class="actions">
<%= link_to("Show", {:action => 'show' , :id => section.id , :page_id => @page.id}, :class => 'action show')%>
<%= link_to("Edit",{:action => 'edit' , :id => section.id , :page_id => @page.id}, :class => 'action edit') %>
<%= link_to("Delete", {:action => 'delete' , :id => section.id , :page_id => @page.id}, :class => 'action delete') %>
</td>
</tr>
<% end %>
</table>
</div>
