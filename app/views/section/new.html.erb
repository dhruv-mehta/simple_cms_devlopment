<%= error_messages_for(@section) %>


<%= link_to("<<back to the list", { :action => 'index' , :page_id => @page.id, :subject_id => params[:subject_id]}, :class => 'back-link') %>
<div class="section new">
<h2>Create Section</h2>
	
<%= form_for( :section , :url => {:action => 'create' , :page_id => @page.id,:subject_id => params[:subject_id]}) do |f| %>
<table summary="section form fields">

<tr>
<%= puts @pages %>
		<th><%= f.label :page_id, "pages" %></th>
		<td><%= f.select(:page_id, @pages.map { |s| [s.name ,s.id]  }) %></td>

</tr>



	
<tr>
		<th><%= f.label :name, "Name" %></th>
		<td><%= f.text_field(:name) %></td>

</tr>


<tr>
		<th><%= f.label :position, "Position" %></th>
		<td><%= f.select(:position, 1..@section_count) %></td>

</tr>


<tr>
		<th><%= f.label :visible, "Visible" %></th>
		<td><%= f.check_box :visible %></td>

</tr>


<tr>
		<th><%= f.label :content_type, "Content Type" %></th>
		<td><%= f.radio_button :content_type, :TEXT %>TEXT
			<%= f.radio_button :content_type, :HTML %>HTMl


		</td>
			
</tr>


<tr>
		<th><%= f.label :content, "Content" %></th>
		<td><%= f.text_area :content %></td>

</tr>


</table>
<div class="form-buttons">
		<%= submit_tag("create section") %>
</div>
<% end %>
</div>


